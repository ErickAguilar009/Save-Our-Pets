<!-- Contact Form -->
<div class="container-fluid no-padding contact-form">
    <div class="section-padding"></div>
    <!-- Container -->
    <div class="container">
        <div class="section-title">
            <h3>¿Desea contáctarnos?</h3>
            <p>Coméntenos sus dudas, consultas o reportes de mascotas desamparadas cerca de su hogar</p>
        </div>

        <div class="container-fluid">
            <div class="row">

                @using (Html.BeginForm("Contactanos", "Inicio", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()


                    <div id="contact-form">
                        <div class="col-md-6 col-md-offset-3">

                            <div class="col-xs-12 col-md-6">
                                <label for="nombre">Nombres:</label>
                                <input type="text" id="nombre" name="nombre" class="form-control" placeholder="Nombres" required>
                            </div>

                            <div class="col-xs-12 col-md-6">
                                <label for="apellido">Apellidos:</label>
                                <input type="text" id="apellido" name="apellido" class="form-control" placeholder="Apellidos" required>
                            </div>

                            <div class=" col-md-6 col-xs-12">
                                <label for="telefono">Teléfono:</label>
                                <input type="tel" id="telefono" name="telefono" class="form-control" placeholder="8888-8888" required>
                            </div>

                            <div class="col-md-6 col-xs-12">
                                <label for="mail">Correo:</label>
                                <input type="email" id="input_email" name="mail" class="form-control" placeholder="nombre@correo.com" required>
                            </div>

                            <div class="col-xs-6 col-md-3"></div>
                            <div class="col-md-6 col-xs-12">
                                <label for="asunto">Asunto:</label>
                                <div>
                                    <select id="asunto" name="asunto" class="form-control" onchange="cambiarElementos(this.value);">
                                        <option value="Consulta">Consulta</option>
                                        <option value="Comentario">Comentario</option>
                                        <option value="Reporte de Mascota">Reporte de mascota</option>
                                    </select>
                                </div>
                            </div>

                            <div class="col-xs-6 col-md-3">
                            </div>
                            <div class="form-group col-md-12 col-sm-12 col-xs-12" id="mensajeContactanos">
                                <label for="mensaje">Mensaje:</label>
                                <textarea name="mensaje" class="form-control" id="mensaje" placeholder="Mensaje" rows="3"></textarea>
                                <!--textarea rows="7" id="textarea_message" name="mensaje" class="form-control" placeholder="Message"></textarea-->
                            </div>

                            <div class="col-xs-6 col-md-3">
                            </div>
                            <div class="hidden" id="reporteMascota">
                                <div class="form-group col-md-6 col-sm-6 col-xs-12">
                                    <label for="mensaje">Mascota:</label>
                                    <select id="mascota" name="mascota" class="form-control">
                                        <option value="1">Gato</option>
                                        <option value="2">Perro</option>
                                        <option value="3">Otro</option>
                                    </select>
                                </div>

                                <div class="col-md-6 col-xs-12">
                                    <label for="mail">Color de pelo:</label>
                                    <input type="text" id="input_email" name="colorpelo" class="form-control" placeholder="color de pelo" required>
                                </div>

                                <div class="form-group col-md-12 col-sm-12 col-xs-12" >
                                    <label for="mensaje">Descripción general:</label>
                                    <textarea name="descripcion" class="form-control" id="descripcion" placeholder="Descripción general" rows="3"></textarea>
                                    <!--textarea rows="7" id="textarea_message" name="mensaje" class="form-control" placeholder="Message"></textarea-->
                                </div>

                                <div class="form-group col-md-12 col-sm-12 col-xs-12">
                                    <label for="mensaje">Dirección:</label>
                                    <textarea name="direccion" class="form-control" id="direccion" placeholder="Escriba su dirección por favor" rows="3"></textarea>
                                    <!--textarea rows="7" id="textarea_message" name="mensaje" class="form-control" placeholder="Message"></textarea-->
                                </div>
                            </div>
                            <div class="col-xs-6 col-md-3">
                        </div>
                            <br /><br />
                            <input type="submit" value="Enviar" class="btn btn-lg btn-color btn-submit">
                            <div id="alert-msg" class="alert-msg"></div>
                        </div>

                    </div><!-- /.contact-form -->

                }
            </div>
        </div>
    </div>
    <div class="section-padding"></div>
</div><!-- Contact Form /- -->

<script>

    function cambiarElementos(dValue) {
        var txtMensaje = document.getElementById("mensajeContactanos");
        var divDatos = document.getElementById("reporteMascota");


        if (dValue == "Consulta") {
            console.log("Consulta");
            //mostramos
            txtMensaje.classList.remove("hidden");
            document.getElementById("mensajeContactanos").style.display = "block";
            //ocultamos
            divDatos.classList.add("hidden");
            document.getElementById("reporteMascota").style.display = "none";
        } else if (dValue == "Comentario") {
            console.log("Comentario");
            //mostramos
            txtMensaje.classList.remove("hidden");
            document.getElementById("mensajeContactanos").style.display = "block";
            //ocultamos
            document.getElementById("reporteMascota").style.display = "none";
        } else {//Empieza en 1 hasta 52
            console.log("Reporte de Mascota");
            //mostramos
            divDatos.classList.remove("hidden");
            document.getElementById("reporteMascota").style.display = "block";
            //ocultamos
            document.getElementById("mensajeContactanos").style.display = "none";
        }
    }

</script>