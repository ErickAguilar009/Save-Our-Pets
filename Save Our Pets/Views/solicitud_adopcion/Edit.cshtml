@model Save_Our_Pets.Models.solicitud_adopcion

<div class="container">
    <div class="col-md-12 col-md-offset-0">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <h4>solicitud_adopcion</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.id_solicitud)

                <div class="form-group">
                    <div class="col-md-10">
                        @Html.HiddenFor(model => model.id_usuario)
                        Candidato: @(Model.Usuarios.nombres) @(Model.Usuarios.apellidos)
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-10">
                        @Html.HiddenFor(model => model.empleo_fijo)
                        Empleo fijo: 
                        @if (Model.empleo_fijo == 1)
                        {
                            <text>SI</text>
                        }
                        else
                        {
                            <text>NO</text>
                        }
                    </div>
                </div>

                <div class="form-group">
                    
                    <div class="col-md-10">
                        @Html.HiddenFor(model => model.id_especie)
                        Especie a adoptar: @(Model.Especie.nombre)
                    </div>
                </div>

                <div class="form-group">
                    @Html.HiddenFor(model => model.requisitos_condiciones)
                    <div class="col-md-10">
                        Términos y condiciones:
                        @if (Model.requisitos_condiciones == 1)
                        {
                            <text>SI</text>
                        }
                        else
                        {
                            <text>NO</text>
                        }
                    </div>
                </div>

                <div class="form-group">
                    
                    <label class="control-label col-md-2">Estado de solicitud</label>
                    <div class="col-md-10">
                        @Html.DropDownListFor(model => model.estado_solicitud, new List<SelectListItem>
                          {
                              new SelectListItem {  Value = "0", Text = "En espera" },
                              new SelectListItem {  Value = "1", Text = "Aceptado" },
                              new SelectListItem {  Value = "2", Text = "Rechazado" }
                          }, new { @class = "form-control", @id = "ddlEstado" })
                    </div>
                </div>

                
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Guardar" class="btn btn-default" />
                    </div>
                </div>
            </div>
        }

        <div>
            @Html.ActionLink("Volver", "Index")
        </div>
        </div></div>